{
  "name": "throup/colourspace",
  "description": "Library to aid the manipulation of colours within different colour spaces",
  "minimum-stability": "stable",
  "license": "GPL-3.0+",
  "authors": [
    {
      "name": "Chris Throup",
      "email": "chris@throup.org.uk",
      "homepage": "http://chris.throup.org.uk/",
      "role": "Developer"
    }
  ],
  "autoload": {
    "psr-4": {
      "Colourspace\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Colourspace\\": [
        "tests/",
        "features/bootstrap/"
      ]
    }
  },
  "include-path": ["src"],
  "require-dev": {
    "behat/behat": "~3.0",
    "emuse/behat-html-formatter": "~0.1",
    "phing/phing": "~2.16",
    "squizlabs/php_codesniffer": "~2.2",
    "sebastian/phpcpd": "~2",
    "sebastian/phpdcd": "~1",
    "phpdocumentor/phpdocumentor": "~2.8",
    "theseer/phpdox": "~0.8",
    "phploc/phploc": "~3",
    "phpmd/phpmd": "~2.1",
    "phpunit/phpunit": "~5.0",
    "phpmetrics/phpmetrics": "~1.1",
    "mayflower/php-codebrowser": "~1.1"
  },
  "config": {
    "discard-changes": true
  }
}
